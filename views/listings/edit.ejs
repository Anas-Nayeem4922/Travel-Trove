<%- layout("/layouts/boilerplate-nav.ejs") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2>Edit your Listing</h2>
            <form method="post" action="/listings/<%= listing._id %>?_method=PUT" enctype="multipart/form-data" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" value="<%= listing.title %>" required class="form-control">
                    <div class="invalid-feedback">Title needs to be entered</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" required class="form-control"><%= listing.description %></textarea>
                    <div class="invalid-feedback">Description needs to be entered</div>
                </div>
                <div class="mb-3">
                    <p class="mb-3"><b>Original Listing Image</b></p>
                    <img src="<%= originalImage %>">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload new image</label>
                    <input type="file" name="listing[image]" class="form-control">
                    <div class="invalid-feedback">Image url needs to be entered</div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" name="listing[price]" required value="<%= listing.price %>" class="form-control">
                        <div class="invalid-feedback">Price needs to be entered</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="listing[country]" required value="<%= listing.country %>" class="form-control">
                        <div class="invalid-feedback">Country needs to be entered</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" required value="<%= listing.location %>" class="form-control">
                    <div class="invalid-feedback">Location needs to be entered</div>
                </div>
                <button class="editbtn btn btn-dark mt-4 mb-5">Edit</button>
            </form>
        </div>
    </div>
</body>
